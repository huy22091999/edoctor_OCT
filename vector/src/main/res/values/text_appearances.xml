    <style name="TextAppearance.Vector.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?riotx_text_primary</item>
    </style>

    <style name="TextAppearance.Vector.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?riotx_text_secondary</item>
    </style>

    <style name="TextAppearance.Vector.Subtitle2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?riotx_text_secondary</item>
    </style>

    <style name="TextAppearance.Vector.Login.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/svn_poppins_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <style name="TextAppearance.Vector.Login.Title2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/svn_poppins_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <style name="TextAppearance.Vector.Login.Title.Small">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Vector.Login.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/svn_poppins_regular</item>
        <item name="android:textColor">?riot_primary_text_color</item>
    </style>

    <style name="TextAppearance.Vector.Login.Text.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?riotx_android_secondary</item>
    </style>

    <style name="CommonTextInput">
        <item name="android:paddingVertical" tools:targetApi="o">12dp</item>
        <item name="fontFamily">@font/edittext_font</item>
    </style>
    <style name="CommonTextInputLogin">
        <item name="android:paddingVertical" tools:targetApi="o">12dp</item>
        <item name="android:height">48dp</item>
        <item name="android:textSize">16sp</item>
<!--        <item name="fontFamily">@font/svn_poppins_regular</item>-->
        <item name="fontWeight">400</item>
    </style>
