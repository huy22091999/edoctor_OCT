<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        style="@style/CommonTextTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        android:paddingStart="24dp"
        android:id="@+id/attachfile_title"
        android:text="@string/accpet"
        android:textColor="@color/text_color_primary_title"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        android:textStyle="bold"
        android:text="Bạn có chắc chắn xóa bản ghi này?"
        android:textColor="#000"
        tools:ignore="HardcodedText"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_updatetil"
        style="@style/Vector.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:visibility="gone"
        android:hint="@string/description"
       >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_update"
            android:layout_width="match_parent"
            android:layout_marginStart="24dp"
            android:textStyle="bold"
            android:layout_marginEnd="24dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            tools:ignore="HardcodedText" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filedialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="XÁC NHẬN"
            tools:ignore="HardcodedText"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filedialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#ef4949"
            android:text="HỦY"
            tools:ignore="HardcodedText"></com.google.android.material.button.MaterialButton>


    </LinearLayout>


</LinearLayout>