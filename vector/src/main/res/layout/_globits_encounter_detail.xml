                    style="@style/LayoutDetailPrisription"
                    android:layout_height="wrap_content"
                    android:text="@string/_sexuallyTransmittedDiseaseSymptoms"
                    android:textSize="16sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/sexuallyTransmittedDiseaseSymptoms"
                    style="@style/LayoutDetailPrisriptionRight"
                    android:layout_height="wrap_content"
                    android:textColor="?riot_primary_text_color"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
