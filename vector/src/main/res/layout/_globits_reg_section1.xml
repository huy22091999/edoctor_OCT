<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/riot_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="56dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/CommonTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instructions"
                android:textColor="@color/text_color_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/CommonText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/instruction_complete_prep_screening"
                android:textColor="@color/riotx_text_color_warning"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                tools:ignore="HardcodedText"
                tools:targetApi="p" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/CommonTextTitleRadio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:text="@string/screen_question_1"
                tools:ignore="HardcodedText" />

            <RadioGroup
                android:id="@+id/question_1_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false"
                tools:ignore="RtlSymmetry">

                <RadioButton
                    android:id="@+id/question_1_ans_1"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:buttonTint="#3366FF"
                    android:paddingStart="16dp"
                    android:text="@string/gender_male"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_1_ans_2"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/gender_female"
                    tools:ignore="RtlSymmetry" />
            </RadioGroup>

            <com.google.android.material.textview.MaterialTextView
                style="@style/CommonTextTitleRadio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:text="@string/screen_question_2"
                android:textColor="?riot_primary_text_color"
                tools:ignore="HardcodedText"
                tools:targetApi="p" />

            <RadioGroup
                android:id="@+id/question_2_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false">

                <RadioButton
                    android:id="@+id/question_2_ans_1"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:text="@string/gender_male"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_2_ans_2"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/gender_female"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_2_ans_3"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:buttonTint="#3366FF"
                    android:paddingStart="16dp"
                    android:text="@string/gender_trans_male"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_2_ans_4"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:text="@string/gender_trans_female"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_2_ans_5"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/other"
                    tools:ignore="RtlSymmetry" />
            </RadioGroup>

            <com.google.android.material.textview.MaterialTextView
                style="@style/CommonTextTitleRadio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:text="@string/screen_question_3"
                android:textColor="?riot_primary_text_color"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <RadioGroup
                android:id="@+id/question_3_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false">

                <RadioButton
                    android:id="@+id/question_3_ans_1"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/gender_male_only"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_3_ans_2"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:text="@string/gender_female_only"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_3_ans_3"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/gender_both_male_female"
                    tools:ignore="RtlSymmetry" />
            </RadioGroup>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/question4_title"
            style="@style/CommonTextTitleRadio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:text="@string/in_the_last_6_months"
            android:textColor="?riot_primary_text_color"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/question41"
                style="@style/CommonTextTitleRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_41"
                android:textColor="?riot_primary_text_color"
                tools:targetApi="p" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:columnCount="2">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_dot" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/question411"
                    style="@style/CommonTextTitleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_411"
                    android:layout_marginEnd="20dp"
                    android:textColor="?riot_primary_text_color"
                    tools:targetApi="p" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_dot" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/question412"
                    style="@style/CommonTextTitleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/question_412"
                    android:textColor="?riot_primary_text_color"
                    tools:targetApi="p" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_dot" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/question413"
                    style="@style/CommonTextTitleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/question_413"
                    android:textColor="?riot_primary_text_color"
                    tools:targetApi="p" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_dot" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/question414"
                    style="@style/CommonTextTitleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/question_414"
                    tools:targetApi="p" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_dot" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/question415"
                    style="@style/CommonTextTitleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/question_415"
                    android:textColor="?riot_primary_text_color"
                    tools:targetApi="p" />
            </GridLayout>

            <RadioGroup
                android:id="@+id/question_41_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false">

                <RadioButton
                    android:id="@+id/question_41_ans_1"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:text="@string/answer_no"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_41_ans_2"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/answer_yes_not_response"
                    tools:ignore="RtlSymmetry" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/CommonTextTitleRadio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/question_42"
                android:textColor="?riot_primary_text_color"
                tools:targetApi="p" />

            <RadioGroup
                android:id="@+id/question_42_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false">

                <RadioButton
                    android:id="@+id/question_42_ans_1"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:text="@string/answer_no"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_42_ans_2"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/answer_yes_not_response"
                    tools:ignore="RtlSymmetry" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/question5"
                style="@style/CommonTextTitleRadio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/question_5"
                android:textColor="?riot_primary_text_color"
                tools:targetApi="p" />

            <RadioGroup
                android:id="@+id/question_5_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false">

                <RadioButton
                    android:id="@+id/question_5_ans_1"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:text="@string/answer_no"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_5_ans_2"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/answer_yes"
                    tools:ignore="RtlSymmetry" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/question6"
                style="@style/CommonTextTitleRadio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/question_6"
                android:textColor="?riot_primary_text_color"
                tools:targetApi="p" />

            <RadioGroup
                android:id="@+id/question_6_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                >
                <RadioButton
                    android:id="@+id/question_6_ans_1"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:text="@string/answer_no"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_6_ans_2"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/answer_yes"
                    tools:ignore="RtlSymmetry" />

            </RadioGroup>

            <com.google.android.material.textview.MaterialTextView
                style="@style/CommonText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:lineHeight="23dp"
                android:text="@string/question_7"
                android:textColor="?riot_primary_text_color"
                android:textSize="16sp"
                tools:targetApi="p" />

            <RadioGroup
                android:id="@+id/question_7_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false">

                <RadioButton
                    android:id="@+id/question_7_ans_1"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="16dp"
                    android:text="@string/answer_no_no_answer"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/question_7_ans_2"
                    style="@style/radioButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/answer_yes"
                    tools:ignore="RtlSymmetry" />

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>