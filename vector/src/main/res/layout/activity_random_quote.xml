<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".random_quote.RandomQuoteActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeAdditionalMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?vctr_home_drawer_header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/a11y_create_menu_close"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGetRandomQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:drawablePadding="9dp"
            app:drawableStartCompat="@drawable/ic_refresh_cw"
            app:drawableTint="?riotx_android_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:text="@string/globits_get_random_quote" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:drawablePadding="9dp"
            app:drawableStartCompat="@drawable/ic_back_24dp"
            app:drawableTint="?riotx_android_secondary"
            app:layout_constraintStart_toEndOf="@+id/btnGetRandomQuote"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:text="@string/bottom_action_home" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>