<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_edit_text"
    android:padding="16dp"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <com.google.android.material.textview.MaterialTextView
        style="@style/CommonTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifi_title"
        android:text="@string/accpet"
        android:textColor="@color/text_color_primary_title"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/CommonTextTitle"
        android:id="@+id/notifi_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/auth_accpet"
        tools:ignore="RtlSymmetry" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_oK"
            android:layout_marginTop="24dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XÁC NHẬN"
            android:layout_marginStart="20dp"
            tools:ignore="HardcodedText"></com.google.android.material.button.MaterialButton>


</androidx.appcompat.widget.LinearLayoutCompat>